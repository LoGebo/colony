{
  "draftId": "2f00bfda-080c-4fdc-9690-2fe63ed007b0",
  "title": "Lumina - Create Visitor Invite",
  "htmlContent": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Create Visitor Invite - Lumina</title>\n    <meta name=\"view-transition\" content=\"same-origin\">\n    <script src=\"https://cdn.tailwindcss.com\"></script>\n    <script src=\"https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js\"></script>\n    <link href=\"https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500,400&display=swap\" rel=\"stylesheet\">\n    <link rel=\"prefetch\" href=\"https://p.superdesign.dev/draft/ddcad9de-e4e9-428d-9760-1a000213005c\" as=\"document\">\n    <link rel=\"prefetch\" href=\"https://p.superdesign.dev/draft/26c5bbcb-5365-4869-8258-317f134c14a5\" as=\"document\">\n    <style>\n        body {\n            font-family: 'Satoshi', sans-serif;\n            -webkit-font-smoothing: antialiased;\n            background-color: #F8FAFC;\n        }\n\n        .glass-panel {\n            background: rgba(255, 255, 255, 0.7);\n            backdrop-filter: blur(20px);\n            -webkit-backdrop-filter: blur(20px);\n            border: 1px solid rgba(255, 255, 255, 0.5);\n        }\n\n        .ios-input:focus-within {\n            border-color: #2563EB;\n            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);\n        }\n\n        @view-transition {\n            navigation: auto;\n        }\n\n        ::view-transition-old(main-nav),\n        ::view-transition-new(main-nav) {\n            animation: none;\n            mix-blend-mode: normal;\n        }\n\n        ::view-transition-old(main-content) {\n            animation: 0.25s ease-out both fade-out;\n        }\n        ::view-transition-new(main-content) {\n            animation: 0.25s ease-in 0.1s both fade-in;\n        }\n\n        @keyframes fade-out { from { opacity: 1; transform: translateY(0); } to { opacity: 0; transform: translateY(10px); } }\n        @keyframes fade-in { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }\n\n        /* Custom scroll behavior */\n        .no-scrollbar::-webkit-scrollbar { display: none; }\n        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }\n\n        .day-pill.active {\n            background: #1E293B;\n            color: white;\n            border-color: #1E293B;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"w-full h-screen flex flex-col bg-[#F8FAFC] overflow-hidden\">\n        <!-- Background Ambiance (Persistent) -->\n        <div class=\"fixed inset-0 overflow-hidden pointer-events-none z-0\">\n            <div class=\"absolute -top-[10%] left-[-10%] w-[120%] h-[60%] bg-gradient-to-b from-blue-100/30 via-teal-50/20 to-transparent blur-3xl\"></div>\n            <div class=\"absolute top-[10%] right-[-20%] w-[300px] h-[300px] bg-blue-400/5 rounded-full blur-[80px]\"></div>\n        </div>\n\n        <!-- Header Area (Dynamic) -->\n        <header class=\"shrink-0 pt-14 px-6 pb-4 flex items-center justify-between relative z-20\">\n            <div class=\"flex items-center gap-4\">\n                <a href=\"https://p.superdesign.dev/draft/26c5bbcb-5365-4869-8258-317f134c14a5\" id=\"back-to-visitors-link\" class=\"w-10 h-10 rounded-full glass-panel flex items-center justify-center text-slate-600 active:scale-95 transition-all\">\n                    <iconify-icon icon=\"lucide:chevron-left\" class=\"text-2xl\"></iconify-icon>\n                </a>\n                <h1 class=\"text-xl font-bold text-slate-900 tracking-tight\">Create Invitation</h1>\n            </div>\n        </header>\n\n        <!-- Main Content (Dynamic) -->\n        <main style=\"view-transition-name: main-content\" class=\"flex-1 overflow-y-auto px-6 pb-32 no-scrollbar relative z-10\">\n            <div class=\"space-y-6\">\n                <!-- Invite Type Selection -->\n                <div class=\"space-y-3\">\n                    <label class=\"text-xs font-bold text-slate-400 uppercase tracking-widest\">Invitation Type</label>\n                    <div class=\"grid grid-cols-3 gap-2\">\n                        <button onclick=\"selectType('one-time')\" id=\"type-one-time\" class=\"type-btn h-20 bg-white border-2 border-blue-600/10 rounded-2xl flex flex-col items-center justify-center gap-1 group active:scale-95 transition-all\">\n                            <iconify-icon icon=\"lucide:user-check\" class=\"text-xl text-blue-600\"></iconify-icon>\n                            <span class=\"text-[11px] font-bold text-slate-700\">One-time</span>\n                        </button>\n                        <button onclick=\"selectType('recurring')\" id=\"type-recurring\" class=\"type-btn h-20 bg-white border-2 border-slate-100 rounded-2xl flex flex-col items-center justify-center gap-1 group active:scale-95 transition-all\">\n                            <iconify-icon icon=\"lucide:calendar-range\" class=\"text-xl text-slate-400\"></iconify-icon>\n                            <span class=\"text-[11px] font-bold text-slate-500\">Recurring</span>\n                        </button>\n                        <button onclick=\"selectType('event')\" id=\"type-event\" class=\"type-btn h-20 bg-white border-2 border-slate-100 rounded-2xl flex flex-col items-center justify-center gap-1 group active:scale-95 transition-all\">\n                            <iconify-icon icon=\"lucide:party-popper\" class=\"text-xl text-slate-400\"></iconify-icon>\n                            <span class=\"text-[11px] font-bold text-slate-500\">Event</span>\n                        </button>\n                    </div>\n                </div>\n\n                <!-- Guest Info -->\n                <div class=\"space-y-4\">\n                    <div class=\"space-y-1\">\n                        <label class=\"text-xs font-bold text-slate-400 ml-1 uppercase tracking-wider\">Guest Name</label>\n                        <div class=\"ios-input group flex items-center bg-white rounded-2xl border border-slate-100 px-4 h-14 transition-all duration-300\">\n                            <iconify-icon icon=\"lucide:user\" class=\"text-slate-300 text-xl mr-3 group-focus-within:text-blue-500 transition-colors\"></iconify-icon>\n                            <input type=\"text\" placeholder=\"e.g. Michael Smith\" class=\"flex-1 bg-transparent border-none outline-none text-slate-900 placeholder:text-slate-300 text-base font-medium h-full\">\n                        </div>\n                    </div>\n\n                    <div class=\"space-y-1\">\n                        <label class=\"text-xs font-bold text-slate-400 ml-1 uppercase tracking-wider\">Phone Number</label>\n                        <div class=\"ios-input group flex items-center bg-white rounded-2xl border border-slate-100 px-4 h-14 transition-all duration-300\">\n                            <iconify-icon icon=\"lucide:phone\" class=\"text-slate-300 text-xl mr-3 group-focus-within:text-blue-500 transition-colors\"></iconify-icon>\n                            <input type=\"tel\" placeholder=\"+1 (555) 000-0000\" class=\"flex-1 bg-transparent border-none outline-none text-slate-900 placeholder:text-slate-300 text-base font-medium h-full\">\n                        </div>\n                    </div>\n                </div>\n\n                <!-- Conditional Scheduling (Recurring) -->\n                <div id=\"schedule-section\" class=\"hidden space-y-4 animate-fade-in\">\n                    <div class=\"space-y-3\">\n                        <label class=\"text-xs font-bold text-slate-400 ml-1 uppercase tracking-wider\">Select Days</label>\n                        <div class=\"flex justify-between\">\n                            <button class=\"day-pill w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-xs font-bold transition-all\" onclick=\"this.classList.toggle('active')\">M</button>\n                            <button class=\"day-pill w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-xs font-bold transition-all\" onclick=\"this.classList.toggle('active')\">T</button>\n                            <button class=\"day-pill w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-xs font-bold transition-all\" onclick=\"this.classList.toggle('active')\">W</button>\n                            <button class=\"day-pill w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-xs font-bold transition-all\" onclick=\"this.classList.toggle('active')\">T</button>\n                            <button class=\"day-pill w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-xs font-bold transition-all\" onclick=\"this.classList.toggle('active')\">F</button>\n                            <button class=\"day-pill w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-xs font-bold transition-all\" onclick=\"this.classList.toggle('active')\">S</button>\n                            <button class=\"day-pill w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-xs font-bold transition-all\" onclick=\"this.classList.toggle('active')\">S</button>\n                        </div>\n                    </div>\n\n                    <div class=\"grid grid-cols-2 gap-4\">\n                        <div class=\"space-y-1\">\n                            <label class=\"text-xs font-bold text-slate-400 ml-1 uppercase tracking-wider\">From</label>\n                            <input type=\"time\" value=\"08:00\" class=\"w-full bg-white rounded-2xl border border-slate-100 px-4 h-14 text-slate-900 font-medium\">\n                        </div>\n                        <div class=\"space-y-1\">\n                            <label class=\"text-xs font-bold text-slate-400 ml-1 uppercase tracking-wider\">Until</label>\n                            <input type=\"time\" value=\"20:00\" class=\"w-full bg-white rounded-2xl border border-slate-100 px-4 h-14 text-slate-900 font-medium\">\n                        </div>\n                    </div>\n                </div>\n\n                <!-- Vehicle Registration -->\n                <div class=\"glass-panel rounded-3xl p-5 space-y-4\">\n                    <div class=\"flex items-center justify-between\">\n                        <div class=\"flex items-center gap-3\">\n                            <div class=\"w-10 h-10 rounded-xl bg-blue-50 text-blue-600 flex items-center justify-center\">\n                                <iconify-icon icon=\"lucide:car\" class=\"text-xl\"></iconify-icon>\n                            </div>\n                            <div>\n                                <h4 class=\"text-sm font-bold text-slate-800\">Vehicle Access</h4>\n                                <p class=\"text-xs text-slate-400\">Register vehicle details</p>\n                            </div>\n                        </div>\n                        <label class=\"relative inline-flex items-center cursor-pointer\">\n                            <input type=\"checkbox\" id=\"vehicle-toggle\" class=\"sr-only peer\" onchange=\"toggleVehicle()\">\n                            <div class=\"w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600\"></div>\n                        </label>\n                    </div>\n                    \n                    <div id=\"vehicle-fields\" class=\"hidden space-y-3 pt-2 animate-fade-in\">\n                        <div class=\"ios-input group flex items-center bg-slate-50/50 rounded-2xl border border-slate-100 px-4 h-12 transition-all\">\n                            <input type=\"text\" placeholder=\"License Plate\" class=\"flex-1 bg-transparent border-none outline-none text-slate-900 placeholder:text-slate-300 text-sm font-bold\">\n                        </div>\n                        <div class=\"ios-input group flex items-center bg-slate-50/50 rounded-2xl border border-slate-100 px-4 h-12 transition-all\">\n                            <input type=\"text\" placeholder=\"Make & Model (e.g. Tesla Model 3)\" class=\"flex-1 bg-transparent border-none outline-none text-slate-900 placeholder:text-slate-300 text-sm font-bold\">\n                        </div>\n                    </div>\n                </div>\n\n                <!-- HMAC/Security Preview (Mock) -->\n                <div class=\"p-6 bg-[#1E293B] rounded-[32px] text-white shadow-xl shadow-slate-900/10\">\n                    <div class=\"flex items-center justify-between mb-6\">\n                        <div class=\"flex items-center gap-3\">\n                            <iconify-icon icon=\"lucide:shield-check\" class=\"text-teal-400 text-2xl\"></iconify-icon>\n                            <span class=\"text-sm font-bold tracking-tight\">Secure LuminaPassâ„¢</span>\n                        </div>\n                        <div class=\"w-2 h-2 rounded-full bg-teal-400 animate-pulse\"></div>\n                    </div>\n                    \n                    <div class=\"flex flex-col items-center py-4 bg-white rounded-2xl mb-4\">\n                        <iconify-icon icon=\"lucide:qr-code\" class=\"text-8xl text-slate-900 opacity-20\"></iconify-icon>\n                        <p class=\"text-[10px] text-slate-400 font-mono mt-2 uppercase\">Preview available on save</p>\n                    </div>\n\n                    <div class=\"flex flex-col gap-1\">\n                        <span class=\"text-[10px] text-slate-400 font-bold uppercase tracking-widest\">Security Signature (HMAC)</span>\n                        <code class=\"text-[11px] font-mono text-teal-100/60 break-all bg-white/5 p-2 rounded-lg\">sha256:7f2e9a1b0c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9</code>\n                    </div>\n                </div>\n            </div>\n        </main>\n\n        <!-- Action Footer (Dynamic) -->\n        <div class=\"fixed bottom-[100px] inset-x-0 px-6 z-30\">\n            <button class=\"w-full h-16 bg-[#1E293B] hover:bg-[#0F172A] active:scale-[0.98] transition-all rounded-2xl text-white font-bold text-lg shadow-xl shadow-slate-900/20 flex items-center justify-center gap-3\">\n                <span>Generate Invitation</span>\n                <iconify-icon icon=\"lucide:arrow-right\" class=\"text-xl\"></iconify-icon>\n            </button>\n        </div>\n\n        <!-- Persistent Bottom Navigation -->\n        <nav style=\"view-transition-name: main-nav\" class=\"fixed bottom-0 inset-x-0 h-[90px] bg-white/80 backdrop-blur-xl border-t border-slate-100 px-6 pb-[34px] flex items-center justify-between z-40\">\n            <a href=\"https://p.superdesign.dev/draft/ddcad9de-e4e9-428d-9760-1a000213005c\" id=\"nav-home\" class=\"flex flex-col items-center gap-1 text-slate-400\">\n                <iconify-icon icon=\"lucide:home\" class=\"text-2xl\"></iconify-icon>\n                <span class=\"text-[10px] font-bold\">Home</span>\n            </a>\n            <a href=\"https://p.superdesign.dev/draft/26c5bbcb-5365-4869-8258-317f134c14a5\" id=\"nav-visitors\" class=\"flex flex-col items-center gap-1 text-blue-600\">\n                <iconify-icon icon=\"lucide:users\" class=\"text-2xl\"></iconify-icon>\n                <span class=\"text-[10px] font-bold\">Visitors</span>\n            </a>\n            <a href=\"https://p.superdesign.dev/draft/7a31d81c-233d-43bf-88f1-ce9c3f60c160\" id=\"nav-payments\" class=\"flex flex-col items-center gap-1 text-slate-400\">\n                <iconify-icon icon=\"lucide:credit-card\" class=\"text-2xl\"></iconify-icon>\n                <span class=\"text-[10px] font-bold\">Payments</span>\n            </a>\n            <a href=\"https://p.superdesign.dev/draft/4b2e4ea0-eda0-4655-a976-ada345ba97ee\" id=\"nav-social\" class=\"flex flex-col items-center gap-1 text-slate-400\">\n                <iconify-icon icon=\"lucide:message-square\" class=\"text-2xl\"></iconify-icon>\n                <span class=\"text-[10px] font-bold\">Social</span>\n            </a>\n            <a href=\"https://p.superdesign.dev/draft/c51716d3-af56-4b12-b421-07490d1b5c93\" id=\"nav-profile\" class=\"flex flex-col items-center gap-1 text-slate-400\">\n                <iconify-icon icon=\"lucide:user-circle\" class=\"text-2xl\"></iconify-icon>\n                <span class=\"text-[10px] font-bold\">Profile</span>\n            </a>\n        </nav>\n    </div>\n\n    <script>\n        function selectType(type) {\n            // Reset all buttons\n            document.querySelectorAll('.type-btn').forEach(btn => {\n                btn.classList.remove('border-blue-600/20', 'bg-blue-50/10');\n                btn.classList.add('border-slate-100');\n                btn.querySelector('iconify-icon').classList.replace('text-blue-600', 'text-slate-400');\n                btn.querySelector('span').classList.replace('text-slate-700', 'text-slate-500');\n            });\n\n            // Select new\n            const activeBtn = document.getElementById('type-' + type);\n            activeBtn.classList.remove('border-slate-100');\n            activeBtn.classList.add('border-blue-600/20', 'bg-blue-50/10');\n            activeBtn.querySelector('iconify-icon').classList.replace('text-slate-400', 'text-blue-600');\n            activeBtn.querySelector('span').classList.replace('text-slate-500', 'text-slate-700');\n\n            // Show/hide recurring schedule\n            const schedule = document.getElementById('schedule-section');\n            if (type === 'recurring') {\n                schedule.classList.remove('hidden');\n            } else {\n                schedule.classList.add('hidden');\n            }\n        }\n\n        function toggleVehicle() {\n            const fields = document.getElementById('vehicle-fields');\n            const toggle = document.getElementById('vehicle-toggle');\n            if (toggle.checked) {\n                fields.classList.remove('hidden');\n            } else {\n                fields.classList.add('hidden');\n            }\n        }\n    </script>\n</body>\n</html>"
}
